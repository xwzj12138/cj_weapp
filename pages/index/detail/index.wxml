<image src='{{image}}' style='height:250px;'></image>
<view class='title'>{{title}}</view>
<view class='time_info'>
  <text>{{activity_time}}</text><text>自动开奖</text>
</view>
<view class='time_info brand_info' wx:if='{{brand_name}}'>
  <text>发起方</text><text></text><text>{{brand_name}}</text>
</view>
<view class='brand_qrcode' wx:if='{{brand_name && qrcode}}'>
  <view>
    <view class='brand_name'>{{brand_name}}赞助</view>
    <view>长按识别右侧小程序码</view>
  </view>
  <view><image src='{{qrcode}}' show-menu-by-longpress></image></view>
</view>
<view>
  <view class='hint'>{{is_participant==false?'观看完整视频广告，参与抽奖':'邀请好友可提高等级哦'}}<text></text></view>
  <button class='participant' bindtap='showAd'>{{is_participant==false?'参与抽奖':'邀请好友'}}</button>
</view>
<view class='product_detail'>
  <view>商品详情</view>
  <image wx:for='{{pruze_detail}}' src='{{item}}' mode='widthFix' wx:key='{{index}}'></image>
</view>